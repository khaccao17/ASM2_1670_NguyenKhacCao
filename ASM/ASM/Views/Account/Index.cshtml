@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Account Information";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Status</th>
            <th>Lock</th>
            <th>Unlock</th>
            <th>Update Role</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var roleId in ViewBag.UserRoles[user.Id])
                    {
                        <span>@roleId</span>
                    }
                </td>
                <td>@(user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.Now ? "Locked" : "Active")</td>
                <td>
                    <a asp-action="LockAccount" asp-route-id="@user.Id" class="btn btn-warning">Lock Account</a>
                </td>
                <td>
                    <a asp-action="UnlockAccount" asp-route-id="@user.Id" class="btn btn-success">Unlock Account</a>
                </td>
                <td>
                    <form asp-action="UpdateRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="selectedRole">
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary">Update Role</button>
                    </form>
                </td>
                <td><a href="@Url.Action("Delete", "Account", new { id = user.Id })">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    /* Button styling */
    .btn {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
        color: #fff;
        border-color: #2e6da4;
    }
    .btn-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            border-color: #ac2925;
        }

    /* Form styling */
    form {
        display: inline;
    }

    select {
        padding: 6px 12px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>
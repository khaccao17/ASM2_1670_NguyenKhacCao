@model IEnumerable<ASM.Models.JobSeeker>

@{
    ViewData["Title"] = "JobSeeker";
}

<h1>JobSeeker</h1>

<p>
    <a asp-action="Create">Create New JobSeeker</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Email)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill)
            </th>
            <th>
                Profile CV
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skill)
            </td>
            <td>
                    <img class="flex-shrink-0 img-fluid border rounded" src="@Html.DisplayFor(modelItem => item.UrlImage)" alt="" style="width: 80px; height: 80px;">
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobSeekerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobSeekerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobSeekerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    /* CSS để tạo khoảng cách giữa các dòng trong bảng */
    .table tbody tr {
        border-bottom: 1px solid #ddd; /* Tạo đường kẻ dưới mỗi dòng */
    }

        /* CSS để tạo hiệu ứng hover */
        .table tbody tr:hover {
            background-color: #f5f5f5; /* Đổi màu nền khi hover */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Làm cho dòng lồi lên */
        }

    /* CSS cho nút Create */
    a[href*="Create"] {
        background-color: #28a745; /* Màu xanh lá cây */
        color: #fff; /* Màu chữ trắng */
        padding: 5px 10px; /* Tăng khoảng cách giữa nút và văn bản */
        border-radius: 4px; /* Bo tròn viền của nút */
        text-decoration: none;
    }

    /* CSS cho nút Edit */
    a[href*="Edit"] {
        background-color: #ffc107; /* Màu vàng */
        color: #000; /* Màu chữ đen */
        padding: 5px 10px; /* Tăng khoảng cách giữa nút và văn bản */
        border-radius: 4px; /* Bo tròn viền của nút */
        text-decoration: none;
    }

    /* CSS cho nút Details */
    a[href*="Details"] {
        background-color: #007bff; /* Màu xanh nước biển */
        color: #fff; /* Màu chữ trắng */
        padding: 5px 10px; /* Tăng khoảng cách giữa nút và văn bản */
        border-radius: 4px; /* Bo tròn viền của nút */
        text-decoration: none;
    }

    /* CSS cho nút Delete */
    a[href*="Delete"] {
        background-color: #dc3545; /* Màu đỏ */
        color: #fff; /* Màu chữ trắng */
        padding: 5px 10px; /* Tăng khoảng cách giữa nút và văn bản */
        border-radius: 4px; /* Bo tròn viền của nút */
        text-decoration: none;
    }
</style>